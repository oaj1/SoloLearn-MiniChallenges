using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            int N = Convert.ToInt32(Console.ReadLine());
            int sum = 0;
            
            //your code goes here
            for (int i = 0; i <= N; i++)
            {
                sum += i;
                
            }

            Console.WriteLine(sum);
        }
    }
}
