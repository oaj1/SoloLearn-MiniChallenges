using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            //taking the bill as input
            int bill = Convert.ToInt32(Console.ReadLine());

            //your code goes here
            double doubleBill = Convert.ToDouble(bill);

             if (doubleBill > 1500)
             
             {
                 doubleBill = doubleBill * 0.15;
                 Console.WriteLine(doubleBill);

             }

        }
    }
}
